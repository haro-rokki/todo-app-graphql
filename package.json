{
  "name": "todo-app-graphql",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:haro-rokki/todo-app-graphql.git",
  "author": "haro_rokki",
  "license": "MIT",
  "dependencies": {
    "apollo-server-micro": "^2.17.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.2.1",
    "micro": "^9.3.4",
    "microrouter": "^3.1.3",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/micro": "^7.3.3",
    "@types/microrouter": "^3.1.1",
    "@types/uuid": "^8.3.0",
    "micro-dev": "^3.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "start": "micro ./build/index.js",
    "dev": "node -r ts-node/register node_modules/.bin/micro-dev ./src/index.ts",
    "build": "tsc -b"
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
